{#
/**
* @file
* Template for Navbar component.
*
* Available config:
* - container: fixed | fluid.
* - placement: default | fixed-top | fixed-bottom | sticky-top
* - color: light | dark
* - navbar_expand: sm | md | lg | xl
* - utility_classes: An array of utility classes.
*
* Available blocks:
* - branding
* - left
* - right
*/
#}
{{ attach_library('radix/navbar') }}
{% set container = container %}
{% set placement = placement ?? '' %}
{% set color = color ?? 'light' %}
{% set navbar_expand = navbar_expand ?? 'lg' %}
<header
	class="header sticky-top">
	{#
	Keyboard navigation/accessibility link to main content section in
	page.html.twig.
	#}
	<a class="visually-hidden-focusable skip-to-main" href="#main-content">
		{{ 'Skip to main content'|t }}
	</a>
	{% block navbar_top %}
		{{ navbar_top }}
	{% endblock %}
	<nav id="mainNav" class="navbar navbar-expand-{{ navbar_expand }} navbar-{{ color }} {{ placement }} {{ utility_classes|join(' ') }}">
		{% if container %}
			<div class="{{ container }}">
			{% endif %}
			{% block branding %}
				{{ branding }}
			{% endblock %}
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				<span class="navbar-toggler-icon"></span>
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse main-navbar-container" id="navbar-collapse">
				{% block left %}
					{{ left }}
				{% endblock %}
				{% block right %}
					{{ right }}
				{% endblock %}
			</div>
			{% if container %}
			</div>
		{% endif %}
	</nav>
</header>
